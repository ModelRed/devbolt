{
  "name": "@devbolt/cli",
  "version": "1.0.4",
  "description": "CLI tool for managing DevBolt feature flags",
  "type": "module",
  "bin": {
    "devbolt": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "keywords": [
    "feature-flags",
    "cli",
    "devbolt"
  ],
  "author": "DevBolt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ModelRed/devbolt",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/ModelRed/devbolt#readme",
  "bugs": {
    "url": "https://github.com/ModelRed/devbolt/issues"
  },
  "dependencies": {
    "@devbolt/core": "*",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "cli-table3": "^0.6.3",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "peerDependencies": {
    "@devbolt/core": "^0.1.0"
  }
}
